doctype html
// saved from url=(0054)file:///home/andy/Desktop/books-page/shpp-library.html
head
    meta(http-equiv='Content-Type' content='text/html; charset=UTF-8')
    title shpp-library
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(name='description' content='library Sh++')
    link(rel='stylesheet' href='/styles/books/libs.min.css')
    link(rel='stylesheet' href='/styles/books/style.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css' crossorigin='anonymous')
    link(rel='shortcut icon' href='http://localhost:3000/favicon.ico')
    style.
        .details {
            display: none;
        }
- let str = v['version'] === 1 ? '' : '/router', strBooks = str ? `${str}?action=books` : '/', strAction = str ? `router?action=books&` : '?'
- let strForId = str ? `router/?id=` : '', actionBook = str ? '&action=book' : '', strSearch = str ? '/router?action=search' : '/'
- let version = v['version']
    section#header.header-wrapper
        nav.navbar.navbar-default
            .container
                .col-xs-5.col-sm-2.col-md-2.col-lg-2
                    .logo
                        a.navbar-brand(href=`http://localhost:3000/api/v${version}${strBooks}`)
                            span.sh &SHcy;
                            span.plus ++
                .col-xs-12.col-sm-7.col-md-8.col-lg-8
                    .main-menu
                        .col-xs-12.col-sm-12.col-md-12.col-lg-12
                            form#searchForm.navbar-form.navbar-right(action=`http://localhost:3000/api/v${version}${strSearch}`, method='POST')
                                .form-group
                                    input#search.form-control(type='text' placeholder='Найти книгу' name='text' value=`${obj['text'] || ''}`)
                                    script.
                                        $("#search").bind("keypress", function (e) {
                                            if (e.keyCode == 13) {
                                                e.preventDefault();
                                                $('form#searchForm').submit();
                                                return false;
                                            }
                                        })
                                    .loader
                                        img(src='/images/books/loading.gif')
                                    #list.bAutoComplete.mSearchAutoComplete(size='')
                .col-xs-2.col-sm-3.col-md-2.col-lg-2.hidden-xs
                    .social
                        a(href='https://www.facebook.com/shpp.kr/' target='_blank')
                            span.fa-stack.fa-sm
                                i.fa.fa-facebook.fa-stack-1x
                        a(href='http://programming.kr.ua/ru/courses#faq' target='_blank')
                            span.fa-stack.fa-sm
                                i.fa.fa-book.fa-stack-1x
    section#main.main-wrapper
        .container
            #content.col-xs-12.col-sm-12.col-md-12.col-lg-12
                each val in obj['booksArray']
                    .book_item.col-xs-6.col-sm-3.col-md-2.col-lg-2(data-book-id=val['id'])
                        .book
                            a(href=`http://localhost:3000/api/v${version}/book/${strForId}${val['id']}${actionBook}`)
                                img(src=`/images/books/${val['id']}.jpg`, alt=`${val['name']}` style='width: 100px;')
                                .blockI(data-title=`${val['name']}` style='height: 46px;')
                                    .title.size_text(data-book-title=`${val['name']}`)=val['name']
                                    .author(data-book-author=`${val['author']}`)=val['author']
                            a(href=`http://localhost:3000/api/v${version}/book/${strForId}${val['id']}${actionBook}`)
                                button.details.btn.btn-success(type='button') &CHcy;&icy;&tcy;&acy;&tcy;&softcy;
        center
            nav(aria-label='Page navigation example')
                ul.pagination
                    if obj['currentPage']
                        if obj['currentPage'] !== 1
                            li.page-item
                                a.page-link(href=`http://localhost:3000/api/v${version}/${strAction}offset=${obj['offset']}&page=${obj['currentPage']-1}` aria-label='Previous')
                                    span(aria-hidden='true') &laquo;
                        if obj['currentPage'] !== obj['lastPage']
                            li.page-item
                                a.page-link(href=`http://localhost:3000/api/v${version}/${strAction}offset=${obj['offset']}&page=${obj['currentPage']+1}`, aria-label='Next')
                                    span(aria-hidden='true') &raquo;

    section#footer.footer-wrapper
        .navbar-bottom.row-fluid
            .navbar-inner
                .container-fuild
                    .content_footer
                        | Made with
                        a.heart(href='http://programming.kr.ua/')
                            i.fa.fa-heart(aria-hidden='true')
                        | by HolaTeam
    .sweet-overlay(tabindex='-1' style='opacity: -0.02; display: none;')
    .sweet-alert.hideSweetAlert(data-custom-class='' data-has-cancel-button='false' data-has-confirm-button='true' data-allow-outside-click='false' data-has-done-function='false' data-animation='pop' data-timer='null' style='display: none; margin-top: -169px; opacity: -0.03;')
        .sa-icon.sa-error(style='display: block;')
            span.sa-x-mark
                span.sa-line.sa-left
                span.sa-line.sa-right
        .sa-icon.sa-warning(style='display: none;')
            span.sa-body
            span.sa-dot
        .sa-icon.sa-info(style='display: none;')
        .sa-icon.sa-success(style='display: none;')
            span.sa-line.sa-tip
            span.sa-line.sa-long
            .sa-placeholder
            .sa-fix
        .sa-icon.sa-custom(style='display: none;')
        h2 &Ocy;&ocy;&ocy;&pcy;&scy;!
        p(style='display: block;') &Ocy;&shcy;&icy;&bcy;&kcy;&acy; error
        fieldset
            input(type='text' tabindex='3' placeholder='')
            .sa-input-error
        .sa-error-container
            .icon !
            p Not valid!
    script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js', integrity='sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3', crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js', integrity='sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk', crossorigin='anonymous')