            }
        // Custom styles for this template
        link(href='/styles/admin/signin.css', rel='stylesheet')
    body.text-center
        main.form-signin.w-100.m-auto
            - let str = '', v = '1'
                if version === 2
                    - v = '2'
                    - str = 'router?action='
                form(action=`http://localhost:3000/admin/api/v${v}/${str}login`, method='POST')
                    h1.h3.mb-3.fw-normal Please sign in
                    .form-floating
                        input#floatingInput.form-control(type='text', placeholder='Username' name='login')
                        label(for='floatingInput') Username
                    .form-floating
                        input#floatingPassword.form-control(type='text', placeholder='Password' name='pass')
                        label(for='floatingPassword') Password
                    input.w-100.btn.btn-lg.btn-primary(type='submit', value='Sign in')